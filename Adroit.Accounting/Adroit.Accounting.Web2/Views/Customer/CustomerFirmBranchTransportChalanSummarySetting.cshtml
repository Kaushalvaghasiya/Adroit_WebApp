@section Scripts
{
    <script>
           
        $(function (e) {

            $('.dv-list').show();
            $('.dv-detail').hide();

            bindDatatableList();
           
            $("#BranchId").on('change', function (e) {
                getDetail($(this).val(), isviewmode);
            });
        });
        $("#AddNew").click(function(){
          bindCkeditorData(null)
        });
        function addClick() {
            $('.dv-list').slideUp();
            $('.dv-detail').slideDown();
            fromReset();
            setScreenMode(false);
            $(".btn-delete").hide();
            $('#BranchId').prop('disabled', false);
            $("#BranchId").focus();
        }

        var isviewmode = false;
        function viewMode(id) {
            isviewmode = true;
            $("#BranchId").val(id).trigger('change');
            //getDetail(id, true);
        }

        function editMode(id) {
            isviewmode = false;
            $("#BranchId").val(id).trigger('change');
            $('#BranchId').prop('disabled', true);
            //getDetail(id, false);
        }

        function refreshDatatableList() {
            $('#tblMain').DataTable().ajax.reload();
        }

        function bindDatatableList() {
            let columns = [];
            let colDef = [];

            colDef.push({
                "render": function (data, type, row) {
                    return row.firmName;
                },
                "targets": colDef.length,
            });
            colDef.push({
                "render": function (data, type, row) {
                    return row.branchName;
                },
                "targets": colDef.length,
            });
            colDef.push({
                "render": function (data, type, row) {
                    return row.purchaseBookName;
                },
                "targets": colDef.length,
            });
            colDef.push({
                "render": function (data, type, row) {
                    return row.bookingSalesBookName;
                },
                "targets": colDef.length,
            });
            colDef.push({
                "render": function (data, type, row) {
                    return row.deliverySalesBookName;
                },
                "targets": colDef.length,
            });
            colDef.push({
                "render": function (data, type, row) {
                    return row.isAutoJvEnableForChallan ? "Yes" : "No";
                },
                "targets": colDef.length,
                "className": "text-center"
            });
            colDef.push({
                "render": function (data, type, row) {
                    return row.isFreightAddInToBillForDelivery ? "Yes" : "No";
                },
                "targets": colDef.length,
                "className": "text-center"
            });
            colDef.push({
                "render": function (data, type, row) {
                    let btnAct = "<div class='btn-list'> ";
                    btnAct += "<a href='#' class='btn-edit btn btn-outline-warning small-icon-btn' data-value='" + row.branchId + "' data-toggle='tooltip' title='Edit' data-placement='bottom' data-original-title='Edit'><i class='fa fa-pencil'></i></a>&nbsp;&nbsp;";
                    btnAct += "<a href='#' class='btn-view btn btn-outline-info small-icon-btn' data-value='" + row.branchId + "' data-toggle='tooltip' title='View' data-placement='bottom' data-original-title='View'><i class='fa fa-info'></i></a>&nbsp;&nbsp;";
                    // btnAct += "<a href='#' class='btn-delete-grid btn btn-outline-danger small-icon-btn' data-value='" + row.id + "' data-toggle='tooltip' title='Delete' data-placement='bottom' data-original-title='Delete'><i class='fa fa-trash-o'></i></a>";
                    btnAct += "</div>";
                    return btnAct;
                },
                "targets": colDef.length,
                "className": "text-center",
                "orderable": false
            });

            columns.push({ "data": "FirmName", "name": "FirmName" });
            columns.push({ "data": "BranchName", "name": "BranchName" });
            columns.push({ "data": "PurchaseBookName", "name": "PurchaseBookName" });
            columns.push({ "data": "BookingSalesBookName", "name": "BookingSalesBookName" });
            columns.push({ "data": "DeliverySalesBookName", "name": "DeliverySalesBookName" });
            columns.push({ "data": "IsAutoJvEnableForChallan", "name": "IsAutoJvEnableForChallan" });
            columns.push({ "data": "IsFreightAddInToBillForDelivery", "name": "IsFreightAddInToBillForDelivery" });

            var table = $('#tblMain').DataTable({
                "bAutoWidth": false,
                lengthChange: false,
                ordering: true,
                searching: true,
                paging: true,
                pageLength: 50,
                order: [[0, 'asc']],
                pagingType: 'full_numbers',
                orderClasses: false,
                //scrollCollapse: true,
                //stateSave: false,
                columnDefs: colDef,
                columns: columns,
                language: {
                    paginate: {
                        next: '<i class="fa fa-angle-right"></i>', // or '→'
                        previous: '<i class="fa fa-angle-left"></i>', // or '←'
                        first: '<i class="fa fa-angle-double-left"></i>', // or '→'
                        last: '<i class="fa fa-angle-double-right"></i>' // or '←'
                    }
                },
                buttons: ['copy', 'excel', 'colvis'],
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@(Url.Content("~/Customer/CustomerFirmBranchTransportSettingList"))',
                    type: 'GET',
                    data: function (d) {
                        d.firmId = parseInt($("#hdnFirmId").val());
                    }
                },
                "initComplete": function (settings, json) {
                    gridInitComplete(table);
                },
                "drawCallback": function (settings) {
                    gridDrawCallback(this);
                }

            });
        }
      
        var clearBranch = true;
        function fromReset() {
            if (clearBranch) {
                $("#BranchId").val(null).trigger('change');
            }
            clearBranch = true;

            $("#activeTabName").text("Add");
            $(".btn-delete").hide();
        }

        function saveItem() {
            try {

                if ($("#BranchId").val() == null || $("#BranchId").val() == "") {
                    showWarning("", "Please select Branch Name");
                    $("#BranchId").focus();
                    return false;
                }

                var savedata = new Object();
                savedata.BranchId = getIntValueZero("BranchId");
                savedata.ChalanSummaryTemplate =  CKEDITOR.instances.ckeditor.getData();
                blockUI('container');

                $.ajax({
                    type: "POST",
                    url: "@(Url.Action("SaveCustomerFirmBranchTransportChalanSummarySetting", "Customer"))",
                    data: JSON.stringify(savedata),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        unblockUI('container');
                        if (data.result == RESULT_SUCCESS) {                          
                            fromReset();
                            showWarning("", 'Branch saved successfully.');
                            $("#Id").val(0);
                            refreshDatatableList();
                            $('.btn-back').click();                          
                        } else {
                            showError("", data.data);
                        }
                    },
                    error: function (error) {
                        unblockUI('container');
                        showError("", error.statusText);
                    }
                });

            }
            catch (e) {
                unblockUI('container');
                showError("", e.message);
            }

        }
       
        function getDetail(id, isViewMode) {
            try {
                

                if (id == '' || id == '0' || id == null )
                {
                    return;
                }

                blockUI('container');
                var retrundata = AjaxCall("Get", "@(Url.Content("~/Customer/GetCustomerFirmBranchTransportChalanSummarySetting"))" + "/" + id, "",
                    function (result) {
                        unblockUI('container');
                        try {
                            if (result.result == RESULT_SUCCESS) {
                                clearBranch = false;
                                addClick();
                                if (isViewMode) {
                                    setScreenMode(true);
                                    $("#activeTabName").text("VIEW ID# " + result.data.branchId);
                                } else {
                                    setScreenMode(false);
                                    $("#activeTabName").text("EDIT (ID# " + result.data.branchId + ")");
                                }
                                bindCkeditorData(result.data.chalanSummaryTemplate)
                            } else {
                                showError('Error', result.data); //warning,  success, error, info
                            }
                        } catch (e) {
                            unblockUI('container');
                            showError('Error', e); //warning,  success, error, info
                        }
                    },
                    function (error) {

                    });
            }
            catch (err) {
            }
        }

        function bindDropdown(elementId, data)
        {
            $("#" + elementId).empty();
            if (data != null) {
                for (var i = 0; i < data.length; i++) {
                    $("#" + elementId).append(new Option(data[i].text, data[i].value, false, false));
                }
            }
        }

        function bindCkeditorData(ckData){
           if(ckData == null || ckData == 0){
                var editor = CKEDITOR.instances.ckeditor;
                if (editor){
                    editor.destroy();   
                }              
                CKEDITOR.replace( 'ckeditor' );
               
                $("#ckeditor").val(@Html.Raw(Json.Serialize(@Model.ChalanSummaryTemplate)))
           }else{
                var editor = CKEDITOR.instances.ckeditor;
                if (editor){
                    editor.destroy();   
                }  
                CKEDITOR.replace( 'ckeditor' )
                $("#ckeditor").val(ckData) 
           }
        }
    </script>
}