                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="LRPayTypeId">LR Pay Type</label>
                                <select class="form-control select2-show-search" id="LRPayTypeId">
                                    @{
                                        if (Model.TransportLRPayTypeList != null)
                                        {
                                            foreach (var o in Model.TransportLRPayTypeList)
                                            {
                                                <option value="@o.Value">@o.Text</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
