                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="LRRateOnId">LR Rate On</label>
                                <select class="form-control select2-show-search" id="LRRateOnId">
                                    @{
                                        if (Model.TransportLRRateOnList != null)
                                        {
                                            foreach (var o in Model.TransportLRRateOnList)
                                            {
                                                <option value="@o.Value">@o.Text</option>
                                            }
                                        }
                                    }
                                </select>
