                                    <th class="border-bottom-0 text-center">Total To Pay Amount</th>
                                    <th class="border-bottom-0 text-center">Total Paid Amount</th>
                                    <th class="border-bottom-0 text-center">Total To Be Billed Amount</th>
                                    <th class="border-bottom-0 text-center">GST%</th>
                                    <th class="border-bottom-0 text-center">GST Amount</th>
                                    <th class="border-bottom-0 text-center">Inv Value</th>
                                    <th class="border-bottom-0 text-center">Branch</th>
                                </tr>
                            </thead>
